rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Les données publiques : tout le monde peut lire.
    match /shoes/{shoeId} {
      allow read;
      // Les écritures doivent être gérées par des fonctions backend (admin)
      allow write: if false; 
    }

    match /categories/{categoryId} {
      allow read;
      allow write: if false;
    }

    match /collections/{collectionId} {
      allow read;
      allow write: if false;
    }

    // Les codes promo sont gérés côté admin, mais peuvent être lus par le backend
    match /promoCodes/{promoCodeId} {
      allow read, write: if request.auth != null && request.auth.token.email == "sergemessou@hotmail.com"; // Admin only
    }

    // Les données utilisateur : seul l'utilisateur concerné peut lire/écrire.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Les commandes : seul l'utilisateur concerné peut créer et lire ses commandes.
    match /orders/{orderId} {
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // La mise à jour et la suppression sont gérées côté admin
      allow update, delete: if request.auth != null && request.auth.token.email == "sergemessou@hotmail.com";
    }
  }
}
