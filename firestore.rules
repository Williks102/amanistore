
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Check if the user's email is the admin email defined in environment variables
      return request.auth != null && request.auth.token.email == "sergemessou@hotmail.com";
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /shoes/{shoeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /promoCodes/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow get: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Allow update if user is an admin OR if they are only changing the 'status' field.
      // This allows the public validate delivery page to work.
      allow update: if isAdmin() || (request.resource.data.keys().hasOnly(['status']));
      allow delete: if false;
    }
  }
}
