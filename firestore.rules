rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Remplacez par votre email administrateur
      return request.auth.token.email == "lagopauline28@gmail.com";
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    match /shoes/{shoeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /promoCodes/{promoCodeId} {
      allow read, write: if isAdmin();
    }
    match /orders/{orderId} {
      // N'importe qui peut lire UNE commande spécifique (pour la page de confirmation)
      allow get: if true;
      
      // Les admins peuvent lister toutes les commandes.
      // Un utilisateur peut lister uniquement ses propres commandes.
      allow list: if isAdmin() || (request.auth.uid != null && request.query.where.userId == request.auth.uid);
      
      // Un utilisateur connecté peut créer une commande pour lui-même
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // Seul l'admin peut changer le statut d'une commande
      allow update: if isAdmin();
      
      // Personne ne peut supprimer une commande
      allow delete: if false;
    }
  }
}
