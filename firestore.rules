
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == "lagopauline28@gmail.com";
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    match /shoes/{shoeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /promoCodes/{promoCodeId} {
      allow read, write: if isAdmin();
    }
    
    match /orders/{orderId} {
      allow get: if true;
      
      // Admins can list all orders. Users can list their own orders.
      allow list: if isAdmin() || (request.auth != null && request.query.where.userId == request.auth.uid);
      
      allow create: if request.auth.uid == request.resource.data.userId;
      
      allow update: if isAdmin();
      
      allow delete: if false;
    }
  }
}
