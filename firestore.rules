
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == "lagopauline28@gmail.com";
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    match /shoes/{shoeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /promoCodes/{promoCodeId} {
      allow read, write: if isAdmin();
    }
    
    match /orders/{orderId} {
        allow get: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.userId);
        allow update: if isAdmin();
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow delete: if false;
        
        allow list: if 
          isAdmin() ||
          (request.auth != null && request.query.where.userId == request.auth.uid) ||
          (request.query.where.validationCode is string && request.query.limit == 1);
    }
  }
}
