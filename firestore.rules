
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Remplacez par l'e-mail de votre administrateur
      return request.auth.token.email == "lagopauline28@gmail.com";
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    match /shoes/{shoeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /promoCodes/{promoCodeId} {
      allow read, write: if isAdmin();
    }

    match /orders/{orderId} {
      // N'importe qui peut lire UNE commande spécifique s'il a l'ID (pour la page de confirmation)
      allow get: if true;
      
      // Seuls les administrateurs peuvent lister toutes les commandes
      allow list: if isAdmin();
      
      // Un utilisateur connecté ne peut créer qu'une commande pour lui-même
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // Seul l'administrateur peut mettre à jour une commande (ex: changer le statut)
      allow update: if isAdmin();
      
      // Personne ne peut supprimer une commande
      allow delete: if false;
    }
  }
}
