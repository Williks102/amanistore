rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /shoes/{shoeId} {
        allow read: if true;
        allow write: if request.auth.token.email == "lagopauline28@gmail.com";
    }

    match /categories/{categoryId} {
        allow read: if true;
        allow write: if request.auth.token.email == "lagopauline28@gmail.com";
    }
    
    match /promoCodes/{promoCodeId} {
        allow read: if true;
        allow write: if request.auth.token.email == "lagopauline28@gmail.com";
    }

    match /orders/{orderId} {
      // Admins can manage all orders
      allow list, get, update, delete: if request.auth.token.email == "lagopauline28@gmail.com";
      
      // Users can create and read their own orders
      allow create: if request.auth.uid == request.resource.data.userId;
      allow get: if request.auth.uid == resource.data.userId;
      
      // Allow delivery validation by anyone, but only when querying by validationCode
      allow list: if request.query.keys().hasOnly(['validationCode', 'limit']);
    }
  }
}
